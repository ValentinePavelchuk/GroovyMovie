		"no-param-reassign": ["error", { "props": false }],
		"@typescript-eslint/ban-ts-comment": "off",
		"no-unsafe-optional-chaining": [
			1
		],
		"jsx-a11y/anchor-is-valid": [
			"error",
			{
				"components": [
					"Link"
				],
				"aspects": [
					"invalidHref",
					"preferButton"
				]
			}
		],
		"react/require-default-props": [
			0
		],
		"react/jsx-props-no-spreading": [
			"off"
		],
		"react/jsx-no-useless-fragment": [
			1
		],
		"react/no-unused-prop-types": [
			1
		],
		"react/function-component-definition": [
			2,
			{
				"namedComponents": "arrow-function",
				"unnamedComponents": "arrow-function"
			}
		],
		"padding-line-between-statements": [
			"error",
			{
				"blankLine": "always",
				"prev": "*",
				"next": "return"
			},
			{
				"blankLine": "always",
				"prev": [
					"if",
					"case"
				],
				"next": "*"
			},
			{
				"blankLine": "always",
				"prev": [
					"const",
					"let",
					"var"
				],
				"next": [
					"block",
					"block-like",
					"expression",
					"function"
				]
			},
			{
				"blankLine": "always",
				"prev": [
					"block",
					"block-like",
					"expression",
					"function"
				],
				"next": [
					"block",
					"block-like",
					"expression",
					"function",
					"const",
					"let",
					"var"
				]
			},
			{
				"blankLine": "any",
				"prev": [
					"expression"
				],
				"next": [
					"expression"
				]
			}
		],
		"import/extensions": [
			"error",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never",
				"svg": "always",
				"css": "always",
				"scss": "always",
				"png": "always",
				"json": "always"
			}
		],
		"import/prefer-default-export": "off",
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			},
			{
				"usePrettierrc": true
			}
		]
	},
	"globals": {
		"React": true,
		"JSX": true
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".js",
					".jsx",
					".ts",
					".tsx"
				],
				"moduleDirectory": [
					"node_modules",
					"src/"
				]
			}
		},
		"react": {
			"version": "detect"
		}
	}
}
